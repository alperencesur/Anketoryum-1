CREATE TABLE Subject(
	QUESTIONID INTEGER REFERENCES Survey(SURVEYID),
	SUBJECT VARCHAR(10),
	PRIMARY KEY(QUESTIONID, SUBJECT)
)

CREATE TABLE Place(
	PLACEID SERIAL PRIMARY KEY,
	PLACENAME VARCHAR(10) NOT NULL
)
 
