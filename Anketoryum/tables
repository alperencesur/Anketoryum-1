CREATE TABLE Answers(
	CHOICEID INTEGER REFERENCES Choice(CHOICEID),
	USERID INTEGER REFERENCES Users(USERID),
	QUESTIONID INTEGER REFERENCES Survey(SURVEYID),
	DATE VARCHAR(40) NOT NULL,
	PRIMARY KEY(USERID, QUESTIONID)	
)

