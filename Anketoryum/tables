CREATE TABLE Survey (
	SURVEYID SERIAL PRIMARY KEY,
	QUESTION VARCHAR(68) NOT NULL,
	CREATORID INTEGER REFERENCES Users(USERID),
	DATE  VARCHAR(20) NOT NULL,
	FINISHDATE VARCHAR(20) NOT NULL,
	ISACTIVE INTEGER DEFAULT 0
)
INSERT INTO Survey(QUESTION,CREATORID, DATE, FINISHDATE, ISACTIVE)
